<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.edu.miu.quizapplication.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/splash_fragment" >
        <action
            android:id="@+id/action_splashFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.edu.miu.quizapplication.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_homeFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.edu.miu.quizapplication.fragment.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/welcome_fragment" >
        <action
            android:id="@+id/action_welcomeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.edu.miu.quizapplication.fragment.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/result_fragment" >
        <action
            android:id="@+id/action_resultFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_resultFragment_to_answerFragment"
            app:destination="@id/answerFragment" />
        <argument
            android:name="score"
            app:argType="integer"
            android:defaultValue="0" />
        <argument android:name="answers"
            app:argType="string[]" />
    </fragment>
    <fragment
        android:id="@+id/answerFragment"
        android:name="com.edu.miu.quizapplication.fragment.AnswerFragment"
        android:label="fragment_answer"
        tools:layout="@layout/answer_fragment" >
        <action
            android:id="@+id/action_answerFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
        <argument android:name="answers"
            app:argType="string[]" />
    </fragment>
</navigation>